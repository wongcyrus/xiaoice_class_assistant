rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow students to read the broadcast data
    match /presentation_broadcast/{courseId} {
      allow read: if true;
      allow write: if false;
      
      // Explicitly allow reading from the new slide registry structure
      match /presentations/{pptId}/slides/{slideId} {
         allow read: if true;
         allow write: if false;
      }
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}